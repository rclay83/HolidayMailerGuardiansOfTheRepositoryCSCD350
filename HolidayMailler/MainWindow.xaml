<Window x:Class="HolidayMailler.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mailer" Height="437" Width="684" WindowStartupLocation="CenterScreen">
    <Grid>
        <DataGrid Margin="21,50,23,65" ColumnWidth="*">
            <DataGrid.Columns>
                <DataGridCheckBoxColumn Binding="{x:Null}" Header="Send To" ClipboardContentBinding="{x:Null}" Width="60"/>
                <DataGridTextColumn Header="Last Name"/>
                <DataGridTextColumn Header="First Name"/>
                <DataGridTextColumn Header="Email"/>
            </DataGrid.Columns>
        </DataGrid>
        <Menu Height="21" Margin="1,0,0,0" VerticalAlignment="Top">
            <MenuItem Name="fileMenu" Header="File">
                <MenuItem Name="exitMenu" Header="Exit"/>
            </MenuItem>
            <MenuItem Name="contactMenu" Header="Contacts">
                <MenuItem Name="addContactMenu" Header="Add New Contact" Click="addContactMenu_Click"/>
            </MenuItem>
            <MenuItem Name="helpMenu" Header="Help">
                <MenuItem Name="aboutMenu" Header="About" Click="aboutMenu_Click"/>
            </MenuItem>
        </Menu>
        <Button Content="Send Mail" Margin="0,0,45,28" Height="21" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="87" IsEnabled="False"/>
        <Label Content="0 Contacts Selected" HorizontalAlignment="Left" Height="30" Margin="33,0,0,21" VerticalAlignment="Bottom" Width="198"/>

    </Grid>
</Window>
