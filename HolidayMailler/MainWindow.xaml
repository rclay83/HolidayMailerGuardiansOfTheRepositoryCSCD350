<Window x:Class="HolidayMailler.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mailer" Height="437" Width="684" WindowStartupLocation="CenterScreen">
    <Grid>
        <DataGrid x:Name="contactsTable" Margin="21,50,23,65" ColumnWidth="*" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridCheckBoxColumn Header="Send" Width="40">
                    <DataGridCheckBoxColumn.CellStyle>
                        <Style>
                            <EventSetter Event="CheckBox.Checked" Handler="OnContactChecked"/>
                            <EventSetter Event="CheckBox.Unchecked" Handler="OnContactUnchecked"/>
                        </Style>
                    </DataGridCheckBoxColumn.CellStyle>
                </DataGridCheckBoxColumn>
                <DataGridTextColumn Header="Last Name" Binding="{Binding LastName}"></DataGridTextColumn>
                <DataGridTextColumn Header="First Name" Binding="{Binding FirstName}"></DataGridTextColumn>
                <DataGridTextColumn Header="Email Name" Binding="{Binding Email}"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
        <Menu Height="21" Margin="1,0,0,0" VerticalAlignment="Top">
            <MenuItem Name="fileMenu" Header="File">
                <MenuItem Name="exitMenu" Header="Exit" Click="exitMenu_Click"/>
            </MenuItem>
            <MenuItem Name="contactMenu" Header="Contacts">
                <MenuItem Name="addContactMenu" Header="Add New Contact" Click="addContactMenu_Click"/>
            </MenuItem>
            <MenuItem Name="helpMenu" Header="Help">
                <MenuItem Name="aboutMenu" Header="About" Click="aboutMenu_Click"/>
            </MenuItem>
        </Menu>
        <Button x:Name="sendButton" Content="Send Mail" Margin="0,0,45,28" Height="21" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="87" IsEnabled="False"/>
        <Label x:Name="selectionCountLabel" Content="0 Contacts Selected" HorizontalAlignment="Left" Height="30" Margin="33,0,0,21" VerticalAlignment="Bottom" Width="198"/>

    </Grid>
</Window>
