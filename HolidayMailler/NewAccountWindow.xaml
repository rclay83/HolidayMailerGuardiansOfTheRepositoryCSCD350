<Window x:Class="HolidayMailler.NewAccountWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add New Email Account" Height="208" Width="518" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <TextBox x:Name="accountField" HorizontalAlignment="Left" Height="23" Margin="135,28,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="148"/>
        <PasswordBox x:Name="passwordField" HorizontalAlignment="Left" Height="24" Margin="135,56,0,0" VerticalAlignment="Top" Width="148"/>
        <Label Content="Username" HorizontalAlignment="Left" Height="23" Margin="24,28,0,0" VerticalAlignment="Top" Width="91"/>
        <Label Content="Password" HorizontalAlignment="Left" Height="23" Margin="24,57,0,0" VerticalAlignment="Top" Width="91"/>
        <ComboBox HorizontalAlignment="Left" Height="22" Margin="170,86,0,0" VerticalAlignment="Top" Width="113"/>
        <Label Content="Service" HorizontalAlignment="Left" Height="23" Margin="24,85,0,0" VerticalAlignment="Top" Width="91"/>
        <Button x:Name="addButton" Content="Add Account" HorizontalAlignment="Right" Height="28" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="106" Click="addButton_Click"/>
        <Label Content="Example:   thisIsntHard@gmail.com" HorizontalAlignment="Right" Height="23" Margin="0,28,10,0" VerticalAlignment="Top" Width="188" FontSize="10.5"/>

    </Grid>
</Window>
